# Environment Configuration for Health Surveillance System API Server

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
# MongoDB connection string - replace with your actual MongoDB instance
MONGODB_URI=mongodb://127.0.0.1:27017/health_surveillance_system
MONGODB_DB_NAME=health_surveillance_system

# Alternative MongoDB Atlas connection string format:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Authentication Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Alternative JWT secrets for different environments
JWT_ACCESS_SECRET=your_access_token_secret_here
JWT_REFRESH_SECRET=your_refresh_token_secret_here

# Cookie Configuration
COOKIE_SECRET=your_cookie_signing_secret_here
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=strict

# Security Configuration
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=30

# Email Configuration (for email verification and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=noreply@healthsurveillance.com
FROM_NAME="Health Surveillance System"

# SMS Configuration (for phone verification)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key_here
SMS_API_SECRET=your_sms_api_secret_here
SMS_FROM_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# External API Keys
WEATHER_API_KEY=your_weather_api_key_here
MAPS_API_KEY=your_maps_api_key_here
ANALYTICS_API_KEY=your_analytics_api_key_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
DATABASE_TIMEOUT=5000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true

# Development Configuration
DEV_SEED_DATA=false
DEV_AUTO_VERIFY_EMAILS=true
DEV_AUTO_VERIFY_PHONES=true
DEV_MOCK_SMS=true

# Production Configuration (for production deployments)
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://production_user:password@cluster.mongodb.net/prod_db
# JWT_SECRET=production_super_secure_secret_key_here
# COOKIE_SECURE=true
# CORS_ORIGIN=https://yourdomain.com
# LOG_LEVEL=error
# ENABLE_DEBUG_MODE=false